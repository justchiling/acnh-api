{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      //"*": ["node_modules/*"],
      "*": ["src/*"],
      "api": ["src/api/*"],
      "utils": ["src/utils/*"],
      "test": ["test/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}