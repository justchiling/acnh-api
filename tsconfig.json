{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir" : "./dist",
    "baseUrl": ".",
    //"rootDir": "src",
    "paths": {
      "*": ["node_modules/*"],
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@apiEndpoints/*": ["src/api/routes/resources/*"],
      "@apiData": ["src/api/data/*"],
      "@utils/*": ["src/utils/*"],
      "@tools/*": ["tools/*"],
      "test": ["test/*"]
    },
    "typeRoots": [
      "src/*", "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
